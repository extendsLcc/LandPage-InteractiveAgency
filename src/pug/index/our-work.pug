section.container-fluid.px-0
    .carousel.slide#works-carousel(data-ride='carousel' data-interval='10000000')
        .carousel-inner.row.w-100.mx-auto
            .carousel-item.px-0.active
                +carouselAtributes( "Layer-12.jpg", "Dronze Zone Layout" )
            .carousel-item.px-0
                +carouselAtributes( "Layer-14.jpg", "Neptune Template" )
            .carousel-item.px-0
                +carouselAtributes( "Layer-13.jpg", "FitApp Layout" )

        a.carousel-control-prev(href='#works-carousel', data-slide='prev', role='button')
            span.carousel-control-prev-icon(aria-hidden='true')
            span.sr-only Anterior
        a.carousel-control-next(href='#works-carousel', data-slide='next', role='button')
            span.carousel-control-next-icon(aria-hidden='true')
