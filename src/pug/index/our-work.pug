include component/gradient-button.pug

mixin carouselAtributes( imgName, itemName )
    .col-12.col-lg-4.px-0
        img.img-fluid.h-100.w-100(src='../assets/img/'+ imgName, alt='slide 1')
        .carousel-caption.d-none
            h5.mb-3= itemName
            p.mb-5 Lorem ipsum dolor sit amet consectetur adipisicing elit. Magnam esse aperiam aliquid rem ipsum assumenda? 
            +gradient-button( "Watch More" )
