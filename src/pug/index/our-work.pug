section.container-fluid
    .row
        .col-md-12
            .carousel.slide#my-carousel(data-ride='carousel')
                ol.carousel-indicators
                    li.active(data-target='#my-carousel', data-slide-to='0', aria-current='location')
                    li(data-target='#my-carousel', data-slide-to='1')
                .carousel-inner
                    .carousel-item.active
                        img.d-block.w-100(src='', alt='')
                        .carousel-caption.d-none.d-md-block
                            h5 Title
                            p Text
                    .carousel-item
                        img.d-block.w-100(src='', alt='')
                        .carousel-caption.d-none.d-md-block
                            h5 Title
                            p Text
                a.carousel-control-prev(href='#my-carousel', data-slide='prev', role='button')
                    span.carousel-control-prev-icon(aria-hidden='true')
                    span.sr-only Previous
                a.carousel-control-next(href='#my-carousel', data-slide='next', role='button')
                    span.carousel-control-next-icon(aria-hidden='true')
                    span.sr-only Next