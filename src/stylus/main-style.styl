bg-img( src )
    background-image: url( src );
    background-position: center;


html, body
    height: 100%;

#header-img
    bg-img: '../img/Layer-10.jpg';

#design-img
    bg-img: '../img/bg-design.jpg';
    background-size: 100% 100%, contain, 3em;
    
#code-img
    bg-img: '../img/bg-code.png';
    background-size: 100% 100%, contain, 3em;

        
// NavBar

#main-nav
    .nav-item
        Item
            font-weight: 600;

.active-page
    a.nav-link
        item
            padding: 0.7rem; // 0.5
            border: solid 1px rgba(52, 58, 64, 0.50); // 50% de Alpha --dark
            border-radius: 90px;

a.nav-link
    &:hover 
        item
            opacity: 0.5;


// Header Content

#mouse-icon
    display: inline-block
    margin auto
    padding: 8px 4px;
    border-radius: 45px;
    box-shadow: 0px 10px 0px 15px #fff, 0px 20px 0px 15px #FFF;

@media ( min-width: 768px )
    .scrool-hint
        margin-top: 15rem !important;
            
.scrool-hint
    margin-top: 3rem;


// Products

#code-design
    .row
        .col-12[id$="img"]
            &:before
                content: '';
                width: 100%;
                height: 30%;
                display: block;
                position: absolute;
                top: 0;
                z-index: 10;
                background: linear-gradient( to bottom, #000, #fff0 );


// Services

@media ( min-width: 992px )
    .card-horizontal
        display: flex !important;
        flex: 1 1 auto;

.card-horizontal
    display: block;


// General 

.sans-serif
    font-family: sans-serif;

.btn-gradient
    background: linear-gradient( to right, #48007d, #c0148e );
    color: #fff;
    border-radius: 45px;
    border: none;
    &:hover
        color: #e2e2e2;
        background: linear-gradient(to right, #390261, #ab117e);

.inner-row
    margin-left: 0 !important;
    margin-right: 0 !important;

