                        span.sr-only (Atual)
                -
                    var itens = [ 
                            { name: "About us", id: "about-us"},
                            { name: "Offer", id: "code-design" },
                            { name: "Portfolio", id: "works-carousel" },
                            { name: "Contact", id: "footer-info"}
                        ];
                each item in itens
                    li.nav-item
                        a.nav-link.text-dark.scroll(href='#'+ item.id )
                            Item=item.name