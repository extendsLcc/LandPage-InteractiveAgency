// NavBar

#main-nav
    .nav-item
        Item
            font-weight: 600;

.active-page
    a.nav-link
        item
            padding: 0.7rem; // 0.5
            border: solid 1px rgba(52, 58, 64, 0.50); // 50% de Alpha --dark
            border-radius: 90px;

a.nav-link
    &:hover 
        item
            opacity: 0.5;


// Header Content

#mouse-icon
    display: inline-block
    margin auto
    padding: 8px 4px;
    border-radius: 45px;
    box-shadow: 0px 10px 0px 15px #fff, 0px 20px 0px 15px #FFF;

@media ( max-width: 575.98px )
    #content-title
        .lead
            color: #fff !important;
            opacity: 1.0; 

@media ( min-width: 768px )
    .scrool-hint
        margin-top: 15rem !important;
            
.scrool-hint
    margin-top: 3rem;


// Products

#code-design
    .row
        .col-12[id$="img"]
            &:before
                pseudo-background: linear-gradient( to bottom, #000, #fff0 );
                height: 30%;
                top: 0;
                z-index: 10;


// Services

@media ( min-width: 992px )
    .card-horizontal
        display: flex !important;
        flex: 1 1 auto;

.card-horizontal
    display: block;


// Our Work
#works-carousel
    .carousel-item
        &:before
            height: 100%;
            transition: background 1s;
            z-index: -1;
            pseudo-background: rgba( 0, 0, 0, 0.0 );
    .carousel-item.active
        .col-lg-4:nth-child(2)
            .carousel-custom-caption
                display: block !important;
            &:before
                height: 100%;
                pseudo-background: rgba( 0, 0, 0, 0.4 );
@media( max-width: 992px )
    #works-carousel
        .carousel-item.active
            .col-lg-4:nth-child(1)
                .carousel-custom-caption
                    display: block !important;
                    bottom: 30px;
                &:before
                    height: 100%;
                    z-index: -1;
                    pseudo-background: rgba( 0, 0, 0, 0.4 );


// About Us

@media ( max-width: 767.98px )
    #about-us
        .card-img-top
            width: 30% !important;
        

// General 

.sans-serif
